{
    "name": "puli/discovery",
    "description": "Discovers Puli resources bound to predefined types.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "~1.0",
        "webmozart/key-value-store": "~1.0",
        "webmozart/glob": "~1.0",
        "beberlei/assert": "~2.3"
    },
    "require-dev": {
        "symfony/filesystem": "~2.5"
    },
    "minimum-stability": "beta",
    "autoload": {
        "psr-4": {
            "Puli\\Discovery\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Discovery\\Tests\\": "tests/",
            "Puli\\Repository\\Tests\\": "vendor/puli/repository/tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
